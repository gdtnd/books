
<Alloy>
  <Collection src="books"></Collection>
  <Window class="container">
    <TableView dataCollection="books">
      <TableViewRow title="{title}" author="{author}" onClick="showBook"></TableViewRow>
    </TableView>
    <Menu id="menu" platform="android">
      <MenuItem title="Add book" onClick="addBook" showAsAction="Ti.Android.SHOW_AS_ACTION_IF_ROOM"></MenuItem>
    </Menu>
  </Window>
</Alloy>